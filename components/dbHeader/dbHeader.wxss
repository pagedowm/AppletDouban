/* components/dbHeader/dbHeader.wxss */
.dbheader{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px;
  background: #fff;
  border-bottom: solid 2px #42bd56;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}
.search{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  margin-right: 20rpx;
}
.logo{
  font-size: 45rpx;
  color: #42bd56;
  font-weight: bold;
  flex-shrink: 0;
  margin-right: 20rpx;
}
form{
  width: 20%;
  height: 100%;
  border-radius: 100rpx;
  padding: 0 20rpx;
  background: #e7e7e7;
}
form.active{
  width: 100%;
  height: 100%;
  border-radius: 100rpx;
  padding: 0 20rpx;
  background: #e7e7e7;
}
input{
  width: 100%;
  height: 100%;
  font-size: 25rpx;
}
.setter image{
  height: 40rpx;
  width: 40rpx;
}